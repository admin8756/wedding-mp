page {
	background-color: #bf2d37;
	position: relative
}

.pages {
	width: 100vw;
	height: 100vh
}

.card {
	background-color: #e8dbd6c7;
}

.cover {
	width: 78vw;
	position: absolute;
	top: 15vh;
	height: 70vh;
	left: 10vw;
	display: flex;
	border-radius: 2rpx;
	margin: 1vw
}

.cover::after {
	content: "";
	width: 70vw;
	position: absolute;
	height: 66vh;
	display: flex;
	margin: 4vw;
	background: url(https://www.ihchina.cn/Public/static/themes/image/temp/png14.png);
	opacity: .1;
	border: 4rpx solid #290a0ae5
}

.margin-top {
	margin-top: 30rpx
}

.title {
	margin-top: 100rpx;
	writing-mode: vertical-lr;
	font-size: 220rpx;
	line-height: 200rpx;
	font-family: "HengShanMaoXing-1";
	color: #290a0ae5;
	font-weight: 500
}

.content {
	position: absolute;
	bottom: 30%;
	width: 100%;
	text-align: center;
	font-size: 50rpx;
	font-family: "YunFengLinQiaoTi-2"
}

.xi {
	color: #d60707
}

.bottom {
	position: absolute;
	bottom: 10%;
	display: flex;
	text-align: center;
	width: 100%;
	z-index: 9
}

.leeBtn {
	background: #00000000;
	border: 2rpx solid;
	font-weight: 500
}

.morePage {
	width: 90vw;
	position: absolute;
	top: 10vh;
	height: 85vh;
	left: 4vw;
	border-radius: 2rpx;
	margin: 1vw;
	overflow: hidden
}

.poet {
	width: 90vw;
	letter-spacing: 4rpx;
	line-height: 100rpx;
	font-size: 46rpx;
	padding-top: 100rpx;
	padding-bottom: 100rpx;
	z-index: 99;
	position: relative;
	writing-mode: vertical-rl;
	font-family: "HanChengBoBoXingJian-2"
}

.poet .author {
	text-align: right
}

.poet .moreText {
	padding-left: 5rpx;
	padding-right: 5rpx;
	border-left: .5px solid #888
}

.bgImage {
	width: 85vw;
	height: 100%;
	position: absolute;
	z-index: -1;
	top: 0;
	filter: blur(20rpx);
	transform: scale(1.2)
}

.tipsImage {
	width: 90%;
	text-align: center
}

.hide {
	opacity: 0
}

.popupPage {
	position: relative;
	z-index: 33;
	height: 82%;
	overflow: hidden
}

.popupPageAfter {
	opacity: .35;
	display: flex;
	width: 100vw;
	height: 50vh;
	position: absolute;
	top: 0;
	left: 0;
	filter: blur(8rpx);
	z-index: 1;
	transform: scale(1.1)
}

.padding {
	padding: 30rpx
}

.padding-xs {
	padding: 10rpx
}

video {
	vertical-align: middle
}

.inputDanmu {
	height: 200rpx
}

.margin {
	margin: 30rpx
}

.kb {
	display: flex
}

.text-bold {
	font-weight: bold
}

.userDanmu_img {
	display: inline-block;
	vertical-align: top;
	height: 60rpx;
	width: 60rpx;
	border-radius: 30rpx
}

.userDanmu_list {
	display: inline-block;
	vertical-align: top;
	font-size: 30rpx;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 15rpx;
}

.aon {
	position: absolute;
	white-space: normal;
	overflow: hidden;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 60rpx;
	background-color: rgba(0, 0, 0, 0.5);
}

@keyframes first {
	from {
		left: 100%;
	}

	to {
		left: -200%;
	}
}

.lee-bar {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 80rpx;
}

.wx-switch-input {
	transform: scale(.8);
}

.border {
	border-radius: 5rpx;
	border-bottom: 2rpx solid;
}

.margin-sm {
	margin: 20rpx;
}

.maps {
	width: 100%;
	height: 30vh;
}

.funcList {
	border-radius: 30rpx;
	position: relative;
	margin: 2vh;
	height: 72vh;
	z-index: 33;
}

.funcList::after {
	content: "";
	border-radius: 30rpx;
	position: absolute;
	height: 70vh;
	width: 96%;
	top: 0;
	left: 0;
	margin: 10rpx;
	border: solid 4rpx #F9EBC8;
}

.border-bottom {
	border-bottom: 1rpx solid;
	padding-bottom: 10rpx;
	margin-top: 10rpx;
}

.flex {
	display: flex;
}

.lee-btn-2 {
	background-color: #bf2d37;
	color: #ffffff;
	border-radius: 8rpx;
	border: none;
	cursor: pointer;
	text-align: center;
	padding: 0 16rpx;
}
.lee-btn-3 {
	background-color: #f7f7f700;
	color: #bf2d37;
	border: 2rpx solid #bf2d37;
	border-radius: 8rpx;
	border: none;
	cursor: pointer;
	text-align: center;
	padding: 0 16rpx;
}
.userDanmu_image{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}
.margin-right-xs{
	margin-right: 10rpx;
}
.margin-left-xs{
	margin-left: 10rpx;
}
.padding-lr{
	padding-left: 30rpx;
	padding-right: 30rpx;
}
.balckView{
    background: #000000;
    color: #d60707;
    z-index: 999999;
    position:fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
}